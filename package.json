{
    "name": "typescript-action",
    "version": "0.0.0",
    "private": true,
    "description": "TypeScript template action",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "lint": "./node_modules/.bin/eslint ./src --ext .js,.jsx,.ts,.tsx ; tsc --noemit",
        "lint:fix": "./node_modules/.bin/eslint ./src --ext .js,.jsx,.ts,.tsx --fix ; tsc --noemit",
        "package": "ncc build --source-map",
        "all": "npm run build && npm run lint && npm run package"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/actions/typescript-action.git"
    },
    "keywords": [
        "actions",
        "node",
        "setup"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@actions/core": "^1.2.6",
        "@slack/web-api": "^6.0.0"
    },
    "devDependencies": {
        "@apify/eslint-config-ts": "^0.1.0",
        "@types/node": "^14.14.9",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "@vercel/ncc": "^0.25.1",
        "eslint": "^7.18.0",
        "eslint-plugin-github": "^4.1.1",
        "eslint-plugin-jest": "^24.1.3",
        "jest-circus": "^26.6.3",
        "js-yaml": "^3.14.0",
        "typescript": "^4.1.3"
    }
}
